{{#if thisButton}}
<div>
  <form>
    <div class='form-group'>
    <label for="question">Question</label>
    {{input value=question id='question'}}
    </div>
    <div class='form-group'>
    <label for="author">Author</label>
    {{input value=author id='author'}}
    </div>
    <div class='form-group'>
    <label for="note">Note</label>
    {{input value=note id='note'}}
    </div>
  </form>
</div>
<button {{action 'addPost' question}}> Save </button>
{{else}}
<button {{action 'thisButton'}}> Create a new post </button>
{{/if}}
