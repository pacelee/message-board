{{#if buttonClicked}}
  <div>
    <form>
      <div class='form-group'>
      <label for="question">Question</label>
      {{input value=question id='question' placeholder=message.question}}
      </div>
      <div class='form-group'>
      <label for="author">Author</label>
      {{input value=author id='author' placeholder=message.author}}
      </div>
      <div class='form-group'>
      <label for="note">Note</label>
      {{input value=note id='note' placeholder=message.note}}
      </div>
    </form>
  </div>
  <button {{action 'updatePost' message}}> Save </button>
{{else}}
  <button {{action 'buttonClicked'}}> Edit </button>
{{/if}}
